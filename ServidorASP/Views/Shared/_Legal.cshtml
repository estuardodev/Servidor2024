@{
    string hostUrl = $"{Context.Request.Host}";

}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@ViewData["Descripcion"]">
    <meta name="keywords" content="@ViewData["Claves"]">
    <title>@ViewData["Title"]</title>

    <!--Flowbite-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>

    <!--Estilos-->
    <link rel="stylesheet" href="~/Legal/css/style.css">
</head>
<body>
    <nav class="bg-white border-gray-200 dark:bg-gray-900">
        <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl p-4">
            @if (hostUrl == "estuardo.dev")
            {
                <a asp-controller="Portafolio" asp-action="Index" class="flex items-center">
                    <img src="~/Portafolio/img/estuardodev-logo-web.webp" class="h-8 mr-3" alt="estuardodev Logo" />
                    <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">@ViewData["Propietario"]</span>
                </a>
            } else if(hostUrl == "estuardodev.com")
            {
                <a asp-controller="Blog" asp-action="Index" class="flex items-center">
                    <img src="~/Portafolio/img/estuardodev-logo-web.webp" class="h-8 mr-3" alt="estuardodev Logo" />
                    <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">@ViewData["Propietario"]</span>
                </a>
            }
            
            <div class="flex items-center">
                <a href="https://twitter.com/estuardodev" target="_blank" class="mr-6 text-sm  text-gray-500 dark:text-white hover:underline">Contacto</a>
            </div>
        </div>
    </nav>
    <nav class="bg-gray-50 dark:bg-gray-700">
        <div class="max-w-screen-xl px-4 py-3 mx-auto">
            <div class="flex items-center">
            </div>
        </div>
    </nav>



    @RenderBody()
        
    

    <footer class="bg-white rounded-lg shadow dark:bg-gray-900 m-4">
        <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
            <div class="sm:flex sm:items-center sm:justify-between">
                <a href="https://estuardo.dev/" class="flex items-center mb-4 sm:mb-0">
                    <img src="~/Portafolio/img/estuardodev-logo-web.webp" class="h-8 mr-3" alt="estuardodev logo" />
                    <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">estuardodev</span>
                </a>
                <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
                    <li>
                        <a asp-controller="Legal" asp-action="Privacidad" class="mr-4 hover:underline md:mr-6 ">Politicas de privacidad</a>
                    </li>
                    <li>
                        <a asp-controller="Legal" asp-action="Terminos"  class="mr-4 hover:underline md:mr-6">Términos y Condiciones</a>
                    </li>
                    <li>
                        <a asp-controller="Legal" asp-action="Cookies" class="mr-4 hover:underline md:mr-6 ">Cookies</a>
                    </li>
                    <li>
                        <a href="https://twitter.com/estuardodev" class="hover:underline">Twitter</a>
                    </li>
                </ul>
            </div>
            <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
            <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">&copy @DateTime.Now.Year <a href="https://estuardo.dev" class="hover:underline">Estuardo Ramírez</a>. Hecho con <a href="https://tailwindcss.com/" class="hover:underline">Tailwind CSS</a> y <a href="https://flowbite.com/" class="hover:underline">Flowbite</span>
        </div>
    </footer>
</body>
</html>
