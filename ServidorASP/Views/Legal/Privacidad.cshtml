@{
    Layout = "_Legal";

    var politica = ViewBag.Politicas as ServidorASP.Models.Privacidad;

    ViewData["Descripcion"] = "Te recomendamos leer nuestros políticas de privacidad";
    ViewData["Claves"] = "Políticas de privacidad de Estuardo Ramírez";
    ViewData["Title"] = "Políticas de Privacidad";
    if (politica == null)
    {
        ViewData["Propietario"] = "Desconocido";
    }
    else
    {
        ViewData["Propietario"] = politica.NombrePropietario;
    }
    
}

<div class="custom-content">
    <div class="container-m">
        @if (politica == null)
        {
            <p>NO HAY INFORMACIÓN</p>
        }
        else
        {
        @Html.Raw(politica.Contenido)
        }
        
        <br>
        <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <span class="font-medium">Estuardo Ramírez,</span> se reserva el derecho de cambiar los Términos y Condiciones, Políticas de Privacidad y Políticas de Cookies en cualquier momento.
        </div>
    </div>
</div>