@{
    var projects = ViewBag.Projects as IEnumerable<ServidorASP.Models.PortafolioProyecto>;
}
<section class=" px-4 mx-auto sm:px-6 lg:px-8 max-w-7xl">
    <h2 class="text-3xl font-bold text-gray-600 dark:text-gray-300 ">Proyectos</h2>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Estos son unos de los muchos proyectos de los cuales he desarrollado.</p>
    <br />
    <div class="flex overflow-x-auto">
        @if (projects != null)
        {
        @foreach (var project in projects)
        {
        <div class="flex-shrink-0 w-64 mx-4">
            <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                <a href="@project.Enlace" target="_blank">
                    <img class="rounded-t-lg h-48 w-full object-cover object-center" src="~/media/@project.Imagen" alt="@project.AltImagen" />
                        </a>
                <div class="p-5">
                        <a href="@project.Enlace" target="_blank">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">@project.Titulo</h5>
                    </a>
                        <a href="@project.Enlace" target="_blank">
                        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">@project.Descripcion</p>
                    </a>
                </div>
            </div>
        </div>
            }   }
        else
        {
            <p>No projects available</p>
        }

    </div>
</section>