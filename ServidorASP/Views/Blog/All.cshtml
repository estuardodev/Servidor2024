@{
    var articulos = ViewBag.Paquete as IEnumerable<ServidorASP.Models.Articulo>;
    var ultimo = ViewBag.UltimoArticulo as ServidorASP.Models.Articulo;
    var search = ViewBag.Search as IEnumerable<ServidorASP.Models.Articulo>;
    string absoluteUrl = $"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Mantente actualizado con las últimas noticias y análisis de nuestro equipo técnico. Desde política hasta entretenimiento, cubrimos todo lo que necesitas saber en nuestro blog de noticias actualizado diariamente.">
    <meta name="keywords" content="Blog Estuardo Ramirez, Noticias, Actualizaciones, Ultimas Noticias, Periodismo, Analisis, Informacion, Actualidad, Novedades, Reportajes, Articulos de noticias">
    <link rel="apple-touch-icon" href="~/Blog/img/blogdev.png">
    <link rel="icon" href="~/Blog/img/blogdev.png">
    <link rel="stylesheet" href="~/Blog/css/scroll.css">

    <!--Formato para articulo en redes sociales-->
    <meta property="og:title" content="estuardodev | Estuardo Ramírez" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="@absoluteUrl" />
    <meta property="og:image" content="~/Blog/img/blogdev.png" />
    <meta property="og:description" content="Mantente actualizado con las últimas noticias y análisis de nuestro equipo técnico. Desde política hasta entretenimiento, cubrimos todo lo que necesitas saber en nuestro blog de noticias actualizado diariamente." />
    <title>Todo</title>

    <!--Flowbite-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>
    <link rel="stylesheet" href="~/Blog/css/new_style.css">
</head>
<body>

    <nav class="bg-white border-gray-200 dark:bg-gray-800">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="https://estuardodev.com" class="flex items-center">
                <img src="~/Blog/img/blogdev.png" class="h-8 mr-3" alt="Flowbite Logo" />
                <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">estuardodev </span>
            </a>
            <div class="flex md:order-2">
                <button type="button" data-collapse-toggle="navbar-search" aria-controls="navbar-search" aria-expanded="false" class="md:hidden text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 mr-1">
                    <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                    </svg>
                    <span class="sr-only">Search</span>
                </button>
                <div class="relative hidden md:block">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                        </svg>
                        <span class="sr-only">Search icon</span>
                    </div>
                    <form role="search" method="GET">
                        <input type="search" name="search" value="@ViewBag.SearchContent" id="search-navbar" class="block w-full p-2 pl-10 text-sm text-gray-800 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Buscar...">
                    </form>
                </div>
                <button data-collapse-toggle="navbar-search" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-search" aria-expanded="false">
                    <span class="sr-only">Abrir menú</span>
                    <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15" />
                    </svg>
                </button>
            </div>
            <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-search">
                <div class="relative mt-3 md:hidden">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                        </svg>
                    </div>
                    <form role="search" method="GET">
                        <input type="search" name="search" value="@ViewBag.SearchContent" id="search-navbar" class="block w-full p-2 pl-10 text-sm text-gray-800 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Buscar...">
                    </form>
                </div>
                <ul class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-800 dark:border-gray-700">
                    <li>
                        <a asp-action="Index" asp-controller="Blog" class="block py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500" aria-current="page">Regresar</a>
                    </li>
                    <li>
                        <a href="@ultimo.RealUrl()" target="_blank" class="block py-2 pl-3 pr-4 text-gray-800 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Último post</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-alert" id="container-alert">
        <div id="alert-2" class="flex border items-center p-4 mb-4 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
            </svg>
            <span class="sr-only">Info</span>
            <div class="ml-3 text-sm font-medium">
                ¡Adiós BlogDev! ¡Bienvenido estuardodev! Te presento la nueva versión de nuestro blog ¡Disfrutala!
            </div>
            <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-2" aria-label="Close">
                <span class="sr-only">Cerar</span>
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                </svg>
            </button>
        </div>
    </div>


    <div class="container-l">
        <center>
            <div class="inline-flex rounded-md shadow-sm" role="group">
                <form role="filter" method="GET">
                    <button name="filter" value="posts" type="submit"
                            class="px-4 py-2 text-sm font-medium text-gray-800 rounded-l-lg hover:bg-gray-800 hover:text-white focus:z-10 focus:ring-2 focus:ring-gray-500 focus:bg-gray-800 focus:text-white dark:border-white dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:bg-gray-700
                    @(ViewBag.ActivePosts && ViewBag.ActivePosts != null ? "border bg-gray-600 text-white" : "border bg-transparent text-gray-6000")">

                        Todo
                    </button>
                </form>
                <form role="filter" method="GET">
                    <button name="filter" value="tendencias" type="submit"
                            class="px-4 py-2 text-sm font-medium text-gray-800  hover:bg-gray-800 hover:text-white focus:z-10 focus:ring-2 focus:ring-gray-500 focus:bg-gray-800 focus:text-white dark:border-white dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:bg-gray-700
                    @(ViewBag.ActiveTendencia && ViewBag.ActiveTendencia != null?"border bg-gray-600 text-white": "bg-transparent border-t border-b border-gray-800")">
                        Populares
                    </button>
                </form>
                <form role="filter" method="GET">
                    <button name="filter" value="recent" type="submit"
                            class="px-4 py-2 text-sm font-medium text-gray-800  rounded-r-md hover:bg-gray-800 hover:text-white focus:z-10 focus:ring-2 focus:ring-gray-500 focus:bg-gray-800 focus:text-white dark:border-white dark:text-white dark:hover:text-white dark:hover:bg-gray-700 dark:focus:bg-gray-700
                    @(ViewBag.ActiveReciente && ViewBag.ActiveReciente != null?"border bg-gray-600 text-white" : "border bg-transparent border-gray-800")">
                        Recientes
                    </button>
                </form>
            </div>



        </center>
        <br>
        @if (ViewBag.Search == null)
        {
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            ID
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Título
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Fecha de publicación
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Visitas
                        </th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (var articulo in articulos)
                        {
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        <th scope="row" class="px-6 py-4">
                            @articulo.Id
                        </th>
                        <td class="px-6 py-4 truncate font-medium text-gray-800 whitespace-nowrap dark:text-white">
                            <a href="@articulo.RealUrl()" class="hover:underline">@articulo.Titulo</a>
                        </td>
                        <td class="px-6 py-4">
                                    @(articulo.FechaHoraCreacion?.ToUniversalTime().AddHours(-6).ToString("dd/MM/yyyy")) @(articulo.FechaHoraCreacion?.ToUniversalTime().AddHours(-6).ToString(" HH:mm:ss"))
                        </td>
                        <td class="px-6 py-4">
                            @articulo.Visitas
                        </td>
                    </tr>
                        }
                </tbody>
            </table>
        </div>
        }else {
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            ID
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Título
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Fecha de publicación
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Visitas
                        </th>
                    </tr>
                </thead>
                <tbody>
                        @if (!(ViewBag.Search is string) || ViewBag.Search != "No")
                        {
                            @foreach (var busqueda in search)
                            {
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        <th scope="row" class="px-6 py-4">
                            @busqueda.Id
                        </th>
                        <td class="px-6 py-4 truncate font-medium text-gray-800 whitespace-nowrap dark:text-white">
                                        <a href="@busqueda.RealUrl()" class="hover:underline">@busqueda.Titulo</a>
                        </td>
                        <td class="px-6 py-4">
                                        @busqueda.FechaHoraCreacion
                        </td>
                        <td class="px-6 py-4">
                                        @busqueda.Visitas
                        </td>
                                </tr>
                            }
                        }
                        else
                        {
                            
                        
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        <th scope="row" class="px-6 py-4">
                            0
                        </th>
                        <td class="px-6 py-4 truncate font-medium text-gray-800 whitespace-nowrap dark:text-white">
                            No encontramos nada.
                        </td>
                        <td class="px-6 py-4">
                            0 de enero del 0000 a las 00:00
                        </td>
                        <td class="px-6 py-4">
                            +99
                        </td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
        }
    </div>


    <!--Cookies-->
    <div id="cookie-banner" class="fixed bottom-0 left-0 w-full p-4 bg-gray-800 text-white text-sm">
        <div class="max-w-screen-lg mx-auto flex items-center justify-between">
            <p>Este sitio web utiliza cookies para garantizar que obtenga la mejor experiencia en nuestro sitio web. <a 
                asp-action="Cookies" asp-controller="Legal" class="hover:underline">Leer más.</a></p>
            <button id="accept-cookies" class="ml-4 px-4 py-2 bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300">Aceptar</button>
        </div>
    </div>


    <!--Footer-->
    <footer class="bg-white rounded-lg shadow dark:bg-gray-800 m-4">
        <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
            <div class="sm:flex sm:items-center sm:justify-between">
                <a href="https://estuardodev.com/" class="flex items-center mb-4 sm:mb-0">
                    <img src="~/Blog/img/blogdev.png" class="h-8 mr-3" alt="estuardodev logo" />
                    <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">estuardodev </span>
                </a>
                <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
                    <li>
                        <a asp-action="Privacidad" asp-controller="Legal" class="mr-4 hover:underline md:mr-6 ">Politicas de privacidad</a>
                    </li>
                    <li>
                        <a asp-action="Terminos" asp-controller="Legal" class="mr-4 hover:underline md:mr-6">Términos y Condiciones</a>
                    </li>
                    <li>
                        <a asp-action="Cookies" asp-controller="Legal" class="mr-4 hover:underline md:mr-6 ">Cookies</a>
                    </li>
                    <li>
                        <a href="https://twitter.com/estuardodev" class="hover:underline">Twitter</a>
                    </li>
                </ul>
            </div>
            <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
            <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">&copy 2022 - @DateTime.Now.Year <a href="https://estuardo.dev" class="hover:underline">Estuardo Ramírez</a>. Hecho con <a href="https://tailwindcss.com/" class="hover:underline">Tailwind CSS</a> y <a href="https://flowbite.com/" class="hover:underline">Flowbite</span>
        </div>
    </footer>

    <script src="~/Blog/js/modo_oscuro.js"></script>
    <script src="~/Blog/js/cookies.js"></script>
    <script src="~/Blog/js/alert.js"></script>
    <script>
        initializeCookieAlert();
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>
</body>
</html>